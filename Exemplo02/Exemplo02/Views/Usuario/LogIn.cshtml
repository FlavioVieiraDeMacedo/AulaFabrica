@model Exemplo02.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "LogIn";
}

<h2>LogIn</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(l => l.Email)
        @Html.TextBoxFor(l => l.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Password)
        @Html.PasswordFor(l => l.Password)
    </div>
    @Html.HiddenFor(l => l.ReturnUrl)
    @MeuHelper.Submit("Logar", "btn btn-primary")
}
