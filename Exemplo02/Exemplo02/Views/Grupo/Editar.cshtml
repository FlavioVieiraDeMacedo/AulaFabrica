@model Exemplo02.Models.Grupo
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{


    @Html.HiddenFor(a => a.Id)
    @Html.HiddenFor(a => a.Projeto.Id)
    <div class="form-group">
        @Html.LabelFor(a => a.Nome)
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Nota)
        @Html.TextBoxFor(a => a.Nota, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Projeto.Nome)
        @Html.TextBoxFor(a => a.Projeto.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Projeto.Descricao)
        @Html.TextAreaFor(a => a.Projeto.Descricao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Projeto.DataInicio)
        @Html.TextBoxFor(a => a.Projeto.DataInicio, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Projeto.DataTermino)
        @Html.TextBoxFor(a => a.Projeto.DataTermino, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Projeto.Entregue)
        @Html.CheckBoxFor(a => a.Projeto.Entregue, new { @class = "form-control" })
    </div>
    <div>
        @MeuHelper.Submit("Atualizar", "btn btn-primary")
    </div>
}
